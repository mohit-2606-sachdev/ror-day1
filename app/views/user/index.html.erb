<h1>User#index</h1>
<p>Find me in app/views/user/index.html.erb</p>


        <% if @users.count > 0 %>
        <% @users.each do |users| %>
        <table>
            <thead>
                <th>Sno.</th>
                <th>name</th>
                <th>email</th>
                <th>password</th>
                <th>Actions</th>
            </thead>
            <tbody>
        <tr>
            <td>
                <%= users.id %>
            </td>
            <td>
                <%= users.name %>
            </td>
            <td>
                <%= users.email %>
            </td>
            <td>
                <%= users.password %>
            </td>
            <td>
                <%= link_to "Edit", edit_user_path(users) %>
                <%= link_to "Show", user_path(users) %>
                <%= link_to "Delete", user_path(users) , method: :delete %>
            </td>
        </tr>
</table>
</tbody>
        <%end%>
        <%else%>
        <p>No Data Found</p>
        <% end %>


<div>
    <%= link_to "new", new_user_path %>
</div>



